<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.dissertation.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.dissertation.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.dissertation.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_notes"
        android:name="com.example.dissertation.ui.notes.NotesFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_notes">

        <action
            android:id="@+id/action_notes_to_trash"
            app:destination="@id/nav_notetrash"/>
    </fragment>

    <fragment
        android:id="@+id/nav_notetrash"
        android:name="com.example.dissertation.ui.notes.NoteTrashFragment"
        android:label="NoteTrash"
        tools:layout="@layout/fragment_notetrash"/>

    <fragment android:id="@+id/nav_budget"
        android:name="com.example.dissertation.ui.budget.BudgetFragment"
        android:label="@string/budget"
        tools:layout="@layout/fragment_budget" />

    <fragment
        android:id="@+id/nav_weather"
        android:name="com.example.dissertation.weather.WeatherFragment"
        android:label="Weather"
        tools:layout="@layout/fragment_weather" />

    <fragment
        android:id="@+id/nav_task"
        android:name="com.example.dissertation.ui.task.TaskFragment"
        android:label="Task"
        tools:layout="@layout/fragment_tasks" />

    <fragment
        android:id="@+id/nav_chart"
        android:name="com.example.dissertation.ui.chart.ChartFragment"
        android:label="Chart"
        tools:layout="@layout/fragment_chart" />

    <fragment
        android:id="@+id/nav_inventory"
        android:name="com.example.dissertation.ui.inventory.InventoryFragment"
        android:label="Inventory"
        tools:layout="@layout/fragment_inventory"/>

    <fragment
        android:id="@+id/nav_weather_chart"
        android:name="com.example.dissertation.ui.weatherchart.WeatherChart"
        android:label="Weather Chart"
        tools:layout="@layout/fragment_weatherchart" />
</navigation>